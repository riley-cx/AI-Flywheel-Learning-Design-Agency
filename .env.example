# AI Flywheel Agency Configuration
# Copy this to .env and fill in your values

# ============================================================================
# CORE SETTINGS
# ============================================================================

AGENCY_NAME="AI Flywheel Elite Learning Design Agency"
ENVIRONMENT="development"  # development, staging, production
DEBUG="true"

# ============================================================================
# ANTHROPIC CLAUDE API
# ============================================================================

ANTHROPIC_API_KEY="your_anthropic_api_key_here"
# Get your API key from: https://console.anthropic.com/

# Model selection
CLAUDE_MODEL="claude-sonnet-4-20250514"  # Latest Sonnet
# Options: claude-sonnet-4-20250514, claude-opus-4-20250514, claude-3-5-sonnet-20250219

# API settings
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
CLAUDE_TIMEOUT=120  # seconds

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================

DB_HOST="localhost"
DB_PORT=5432
DB_NAME="ai_flywheel_agency"
DB_USER="your_db_username"
DB_PASSWORD="your_db_password"

# Connection pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================================================
# REDIS (Optional - for caching)
# ============================================================================

REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# ============================================================================
# VECTOR DATABASE (ChromaDB for semantic memory)
# ============================================================================

CHROMA_PERSIST_DIRECTORY="./data/memory/vector"
CHROMA_COLLECTION_NAME="agent_memories"

# ============================================================================
# AGENT SYSTEM
# ============================================================================

# Agent configuration
AGENT_MEMORY_PATH="./data/memory"
AGENT_LOG_PATH="./logs/agents"
SHARED_CONTEXT_PATH="./shared-context"

# Memory settings
AGENT_MEMORY_MAX_SIZE_MB=100
AGENT_MEMORY_RETENTION_DAYS=90
AGENT_MEMORY_CONSOLIDATION_FREQUENCY="daily"  # hourly, daily, weekly

# Performance
AGENT_MAX_CONCURRENT_TASKS=5
AGENT_TASK_TIMEOUT_SECONDS=300

# ============================================================================
# MCP SERVERS
# ============================================================================

# Learning Analytics MCP
ANALYTICS_DB_HOST="localhost"
ANALYTICS_DB_PORT=5432
ANALYTICS_DB_NAME="learning_analytics"

# Market Intelligence MCP
MARKET_INTEL_CACHE_TTL=3600  # 1 hour
MARKET_INTEL_MAX_REQUESTS_PER_MINUTE=30

# Content Management MCP
CONTENT_ROOT_PATH="./data/courses"
CONTENT_GIT_ENABLED="true"
CONTENT_GIT_REPO_PATH="./data/courses/.git"

# Community Platform MCP
COMMUNITY_PLATFORM_API_URL="https://your-community-platform.com/api"
COMMUNITY_PLATFORM_API_KEY="your_community_api_key"

# Quality Validation MCP
QA_WCAG_LEVEL="AA"  # AA or AAA
QA_FAIL_ON_ERROR="false"  # true = block deployment on QA fail

# ============================================================================
# API & WEB INTERFACE
# ============================================================================

API_HOST="0.0.0.0"
API_PORT=8000
API_RELOAD="true"  # Auto-reload in development

# CORS
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security
API_SECRET_KEY="your_secret_key_here_change_in_production"
API_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json or text
LOG_DIR="./logs"
LOG_MAX_SIZE_MB=100
LOG_RETENTION_DAYS=30

# Specific loggers
LOG_AGENTS="INFO"
LOG_MCP="INFO"
LOG_API="INFO"

# ============================================================================
# MONITORING & OBSERVABILITY (Optional)
# ============================================================================

# Sentry (error tracking)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Prometheus (metrics)
PROMETHEUS_ENABLED="false"
PROMETHEUS_PORT=9090

# ============================================================================
# EXTERNAL APIS (Optional)
# ============================================================================

# OpenAI (for comparison/fallback)
OPENAI_API_KEY=""

# Google (for search, trends)
GOOGLE_API_KEY=""
GOOGLE_CSE_ID=""

# ============================================================================
# WORKFLOW & SCHEDULING
# ============================================================================

# Background tasks
SCHEDULER_ENABLED="true"
SCHEDULER_TIMEZONE="America/New_York"

# Proactive monitoring
MONITOR_STRATEGIC_PROGRESS_FREQUENCY="weekly"
MONITOR_DATA_ANOMALIES_FREQUENCY="hourly"
MONITOR_COMMUNITY_HEALTH_FREQUENCY="daily"

# ============================================================================
# SECURITY & COMPLIANCE
# ============================================================================

# Encryption
ENCRYPTION_KEY_PATH="./keys/encryption.key"

# Audit logging
AUDIT_LOG_ENABLED="true"
AUDIT_LOG_PATH="./logs/audit"

# Data retention
DATA_RETENTION_POLICY="90_days"

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Test mode
TEST_MODE="false"
USE_MOCK_DATA="false"

# Development helpers
AUTO_RELOAD_AGENTS="true"
PRETTY_PRINT_LOGS="true"
VERBOSE_AGENT_MESSAGES="false"

# ============================================================================
# FEATURE FLAGS
# ============================================================================

FEATURE_WEB_DASHBOARD="true"
FEATURE_SLACK_INTEGRATION="false"
FEATURE_EMAIL_NOTIFICATIONS="false"
FEATURE_VOICE_INTERFACE="false"

# ============================================================================
# PATHS (Usually don't need to change)
# ============================================================================

PROJECT_ROOT="."
DATA_DIR="./data"
LOGS_DIR="./logs"
TEMP_DIR="./tmp"
